{
  "name": "rm3",
  "version": "0.0.0",
  "description": "A node.js CMS toolkit",
  "main": "lib/front.js",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wirehead/rm3.git"
  },
  "dependencies": {
    "async": "~0.2.10",
    "dustjs-linkedin": "~2.2.10",
    "express": "~3.4.8",
    "request": "~2.30.0",
    "pg": "~3.4.2",
    "clone": "~0.1.18",
    "errs": "~0.3.0",
    "winston": "~0.7.3",
    "squel": "~3.8.1"
  },
  "devDependencies": {
    "jshint": "~2.5.5",
    "tape": "~3.0.0",
    "jsdox": "~0.4.2",
    "istanbul": "~0.3.2",
    "gulp": "~3.8.8",
    "gulp-nodemon": "~1.0.4",
    "gulp-jshint": "~1.8.5"
  },
  "scripts": {
    "unit-tests": "./node_modules/.bin/tape tests/unit/*.js",
    "db-tests": "dropdb --if-exists rm3unit && createdb rm3unit && psql rm3unit < db-schema.sql && ./node_modules/.bin/tape tests/db/*.js",
    "test": "npm run unit-tests && npm run db-tests",
    "coverage": "dropdb --if-exists rm3unit && createdb rm3unit && psql rm3unit < db-schema.sql && ./node_modules/.bin/istanbul cover ./node_modules/.bin/tape tests/unit/*.js tests/db/*.js",
    "lint": "./node_modules/.bin/jshint lib tests",
    "docs": "./node_modules/.bin/jsdox -A --output ./docs/ lib"
  },
  "keywords": [
    "cms"
  ],
  "author": "Wirehead",
  "license": "GPLv2"
}
