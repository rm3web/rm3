{
  "name": "rm3",
  "version": "0.0.0",
  "description": "A node.js CMS toolkit",
  "main": "lib/front.js",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wirehead/rm3.git"
  },
  "dependencies": {
    "async": "~0.9.0",
    "dustjs-linkedin": "~2.7.1",
    "dustjs-helpers": "~1.7.1",
    "express": "~3.4.8",
    "request": "~2.30.0",
    "pg": "~3.4.5",
    "clone": "~0.1.19",
    "errs": "~0.3.2",
    "winston": "~1.0.0",
    "squel": "~3.8.1",
    "routes": "~1.2.0",
    "body-parser": "~1.9.3",
    "validator": "~3.19.1",
    "speakingurl": "~0.13.1",
    "textblocks": "git://github.com/wirehead/textblocks.git#master",
    "dust-intl": "~1.0.1",
    "intl": "~0.1.4",
    "dotenv": "~1.1.0",
    "commander": "~2.5.0",
    "passport": "~0.2.1",
    "passport-local": "~1.0.0",
    "connect-flash": "~0.1.1"
  },
  "devDependencies": {
    "jshint": "~2.5.5",
    "should": "~5.2.0",
    "mocha": "~2.2.1",
    "mocha-steps": "0.0.1",
    "jsdox": "~0.4.2",
    "istanbul": "~0.3.2",
    "gulp": "~3.8.8",
    "gulp-nodemon": "~1.0.4",
    "gulp-jshint": "~1.8.5",
    "gulp-istanbul": "~0.7.0",
    "gulp-mocha": "~2.0.1",
    "test-plan": "~0.1.1"
  },
  "scripts": {
    "unit-tests": "RM3_PG=postgresql://wirehead:rm3test@127.0.0.1/rm3unit ./node_modules/.bin/mocha tests/unit/*.js",
    "db-tests": "dropdb --if-exists rm3unit && createdb rm3unit && psql rm3unit < db-schema.sql && RM3_PG=postgresql://wirehead:rm3test@127.0.0.1/rm3unit ./node_modules/.bin/mocha tests/db/*.js",
    "test": "npm run unit-tests && npm run db-tests",
    "coverage": "dropdb --if-exists rm3unit && createdb rm3unit && psql rm3unit < db-schema.sql && RM3_PG=postgresql://wirehead:rm3test@127.0.0.1/rm3unit ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha tests/unit/*.js tests/db/*.js",
    "lint": "./node_modules/.bin/jshint lib tests bin",
    "docs": "./node_modules/.bin/jsdox -A --output ./docs/ lib"
  },
  "keywords": [
    "cms"
  ],
  "author": "Wirehead",
  "license": "GPLv2"
}
